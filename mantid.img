Bootstrap: localimage
From: python36.sif

%files
  Mantid.user.properties ~/.mantid/Mantid.user.properties
  ../autoreduce/build /autoreduce/build

%post
  export DEBIAN_FRONTEND=noninteractive
  # add the mantid signing key
  apt-add-repository "deb [arch=amd64] http://apt.isis.rl.ac.uk $(lsb_release -c | cut -f 2) main"
  apt-add-repository ppa:mantid/mantid
  apt-get update
  apt-get install -y libglu1-mesa mantid
  cp /opt/Mantid/bin/Mantid.properties /opt/Mantid/lib/Mantid.properties
