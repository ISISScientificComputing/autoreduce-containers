Bootstrap: localimage
From: mantid.sif

%files
  ../autoreduce/setup.py /autoreduce/setup.py
  ../autoreduce/build /autoreduce/build

%post
  apt install -y git
  python3 -m pip install virtualenv
  python3 -m virtualenv -p /usr/bin/python3 venv3
  . /venv3/bin/activate
  python3 -m pip install -e autoreduce

%runscript
  . /venv3/bin/activate
  python3 /autoreduce/queue_processors/queue_processor/queue_listener.py
